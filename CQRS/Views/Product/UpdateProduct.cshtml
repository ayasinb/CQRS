@model CQRS.CQRSDesignPattern.Results.ProductResults.GetProductByIdQueryResult
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <br /> <br />
        <label>Ürün Id</label>
        <input type="text" asp-for="ProductId" readonly class="form-control" />
        <div class="alert alert-primary">Ürün Güncelleme</div>
        <br />
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Ürün Açıklaması</label>
        <input type="text" asp-for="ProductDescription" class="form-control" />
        <br />
        <label>Ürün Fiyatı</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Ürün Miktarı</label>
        <input type="text" asp-for="Quantity" class="form-control" />
        <br />
        <label>Ürün Görsel URL</label>
        <input type="text" asp-for="ImageURL" class="form-control" />
        <br />
        <label>Ürün Kategori</label>
        <input type="text" asp-for="CategoryId" class="form-control" />
        <br />
        <button class="btn btn-info">Ürün Güncelle</button>
    </div>
</form>